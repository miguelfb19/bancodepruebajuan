---
import Footer from "../components/Footer.astro";
import { TopMenu } from "../components/ui/TopMenu";
import { ScrollToTop } from "../components/ui/ScrollToTop";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/logo/logo-circlex500.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Banco de Prueba Juan</title>
    
    <!-- Shoelace web components CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.1/cdn/themes/light.css"
      />
      
  </head>

  <body class="antialiased">
    <TopMenu client:load />
    <main>
      <ScrollToTop client:load />
      <slot />
    </main>
    <Footer />
  </body>
</html>
